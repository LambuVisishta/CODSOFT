import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        
        int totalRoundsWon = 0;  // Keeps track of the number of rounds won
        boolean playAgain = true;  // Controls whether the game continues

        System.out.println("ğŸ‰ Welcome to the Number Guessing Game! ğŸ‰");

        while (playAgain) {
            int lowerBound = 1;
            int upperBound = 100;
            int secretNumber = random.nextInt(upperBound - lowerBound + 1) + lowerBound;
            int remainingAttempts = 5;  // User gets 5 chances to guess
            boolean isCorrectGuess = false;

            System.out.println("\nI've picked a number between " + lowerBound + " and " + upperBound + ".");
            System.out.println("You have " + remainingAttempts + " attempts to guess it. Let's begin!");

            while (remainingAttempts > 0) {
                System.out.print("\nEnter your guess: ");
                int userGuess = scanner.nextInt();
                remainingAttempts--;

                if (userGuess == secretNumber) {
                    System.out.println("ğŸ‰ Congratulations! You guessed the correct number! ğŸ‰");
                    totalRoundsWon++;
                    isCorrectGuess = true;
                    break;
                } else if (userGuess < secretNumber) {
                    System.out.println("ğŸ“‰ Too low! Try a higher number.");
                } else {
                    System.out.println("ğŸ“ˆ Too high! Try a lower number.");
                }

                // Inform the user of remaining attempts
                if (remainingAttempts > 0) {
                    System.out.println("Attempts left: " + remainingAttempts);
                } else {
                    System.out.println("âŒ No more attempts! The correct number was: " + secretNumber);
                }
            }

            // Display the player's score
            System.out.println("\nğŸ† Your current score: " + totalRoundsWon + " round(s) won.");

            // Ask if the user wants to play another round
            System.out.print("Would you like to play again? (yes/no): ");
            String response = scanner.next().trim().toLowerCase();
            playAgain = response.equals("yes");
        }

        System.out.println("\nğŸ® Thanks for playing! Your final score: " + totalRoundsWon + " round(s) won.");
        scanner.close();
    }
}
